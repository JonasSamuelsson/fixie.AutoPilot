<mahApps:MetroWindow x:Class="Fixie.AutoRun.AppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		  xmlns:mahApps="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:Fixie.AutoRun"
        Title="fixie.AutoRun" MinHeight="250" MinWidth="250" Height="500" Width="600" SaveWindowPosition="True" BorderBrush="LightGray" BorderThickness="1" NonActiveBorderBrush="LightGray">

	<Window.DataContext>
		<local:AppViewModel/>
	</Window.DataContext>

	<ContentPresenter Content="{Binding ViewModel.Value}"/>
</mahApps:MetroWindow>
