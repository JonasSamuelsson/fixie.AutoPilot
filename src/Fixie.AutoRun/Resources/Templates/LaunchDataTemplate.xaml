<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						  xmlns:local="clr-namespace:Fixie.AutoRun"
						  xmlns:converters="clr-namespace:Fixie.AutoRun.Converters">
	<DataTemplate DataType="{x:Type local:LaunchViewModel}">
		<Grid x:Name="Root">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				<DockPanel Grid.Column="0" Height="Auto">
					<Label Content="Solution"/>
					<TextBox Text="{Binding Path.Value}"/>
				</DockPanel>
				<StackPanel Grid.Column="1" Orientation="Horizontal">
					<Viewbox>
						<Button Content="{DynamicResource appbar_folder_open}" Command="{Binding BrowseCommand}" Style="{DynamicResource MetroCircleButtonStyle}"/>
					</Viewbox>
					<Viewbox>
						<Button Content="{DynamicResource appbar_arrow_right}" Command="{Binding ExecuteNewCommand}" Style="{DynamicResource MetroCircleButtonStyle}"/>
					</Viewbox>
				</StackPanel>
			</Grid>
			<ItemsControl Grid.Row="1" ItemsSource="{Binding Paths}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition/>
								<ColumnDefinition Width="Auto"/>
							</Grid.ColumnDefinitions>
							<Label Content="{Binding Converter={x:Static converters:Path2FileNameConverter.Instance}}" FontSize="14" ToolTip="{Binding}"/>
							<StackPanel Grid.Column="1" Orientation="Horizontal">
								<Viewbox>
									<Button Content="{DynamicResource appbar_settings}" Style="{DynamicResource MetroCircleButtonStyle}"/>
								</Viewbox>
								<Viewbox>
									<Button Content="{DynamicResource appbar_control_play}"
									        Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}, Path=DataContext.ExecuteExistingCommand}"
									        CommandParameter="{Binding}"
											  Style="{DynamicResource MetroCircleButtonStyle}"/>
								</Viewbox>
							</StackPanel>
						</Grid>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</Grid>
	</DataTemplate>
</ResourceDictionary>
	